<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>application.log</file> <!-- à côté du JAR -->
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
